<!DOCTYPE html>
<html lang="id">
<head>
    <title>Dashboard - Uangku</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .summary-card { background: linear-gradient(135deg, #4b6cb7 0%, #182848 100%); color: white; border-radius: 15px; padding: 25px; }
        .amount.keluar { color: #dc3545; font-weight: bold; }
        .amount.masuk { color: #198754; font-weight: bold; }
    </style>
</head>
<body class="bg-light">
    <nav class="navbar navbar-dark bg-primary shadow-sm mb-4">
        <div class="container">
            <span class="navbar-brand">üí∞ SmartSpend Uangku</span>
            <div class="ms-auto">
                <a href="/target" class="btn btn-light btn-sm me-2">üéØ Target</a>
                <a href="/logout" class="btn btn-danger btn-sm">Keluar</a>
            </div>
        </div>
    </nav>

    <div class="container">
        <div class="summary-card shadow-sm mb-4 text-center">
            <small>Saldo Saat Ini</small>
            <h1 class="fw-bold">Rp <%= total.toLocaleString() %></h1>
        </div>

        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card p-3 shadow-sm">
                    <h5>Tambah Transaksi</h5>
                    <form action="/add-transaction" method="POST">
                        <select name="tipe" class="form-select mb-2" required>
                            <option value="keluar">Pengeluaran</option>
                            <option value="masuk">Pemasukan</option>
                        </select>
                        
                        <input type="text" name="kategori" class="form-control mb-2" placeholder="Kategori (Misal: Makan)" required>
                        
                        <input type="text" name="deskripsi" class="form-control mb-2" placeholder="Ket: Makan siang" required>
                        
                        <input type="number" name="nominal" class="form-control mb-2" placeholder="Nominal" required>
                        
                        <button type="submit" class="btn btn-primary w-100">Simpan</button>
                    </form>
                </div>
            </div>
            
            <div class="col-md-8">
                <div class="card p-3 shadow-sm">
                    <div class="d-flex justify-content-between mb-3">
                        <h5 class="m-0">Laporan Transaksi</h5>
                        <div class="btn-group">
                            <button onclick="dlPDF()" class="btn btn-outline-danger btn-sm">PDF</button>
                            <button onclick="dlExcel()" class="btn btn-outline-success btn-sm">Excel</button>
                        </div>
                    </div>
                    <table class="table table-hover" id="transactionTable">
                        <thead>
                            <tr>
                                <th>Keterangan</th>
                                <th>Tanggal</th>
                                <th>Nominal</th>
                                <th>Hapus</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% transactions.forEach(t => { %>
                                <tr>
                                    <td><%= t.deskripsi %></td>
                                    <td><%= t.date.substring(0,10) %></td>
                                    <td class="amount <%= t.tipe %>">Rp <%= t.nominal.toLocaleString() %></td>
                                    <td><a href="/delete-transaction/<%= t.id %>" class="btn btn-sm btn-link text-danger">üóëÔ∏è</a></td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <footer style="text-align: center; margin-top: 50px; padding: 20px; color: #888; font-size: 14px;">
        <hr style="border: 0.5px solid #ccc; width: 50%; margin: 10px auto;">
        <p>@Copyright by 23552011403_Ai Nurul Hidayah_23 CNS A_UASWEB1</p>
    </footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.25/jspdf.plugin.autotable.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <script>
        function dlPDF() {
            const { jsPDF } = window.jspdf;
            const doc = new jsPDF();
            doc.text("Laporan Keuangan: Ai Nurul Hidayah", 14, 15);
            doc.autoTable({ html: '#transactionTable', startY: 20 });
            doc.save("Laporan_23552011403.pdf");
        }
        function dlExcel() {
            XLSX.writeFile(XLSX.utils.table_to_book(document.getElementById("transactionTable")), "Laporan_23552011403.xlsx");
        }
    </script>
</body>
</html>