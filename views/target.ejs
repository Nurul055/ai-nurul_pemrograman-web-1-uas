<!DOCTYPE html>
<html lang="id">
<head>
    <title>Target - Uangku</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .progress-bar-container { background: #eee; height: 20px; border-radius: 10px; overflow: hidden; }
        .progress-fill { 
            width: var(--pg-width, 0%); 
            background: #28a745; height: 100%; text-align: center; color: white; font-size: 12px; 
        }
    </style>
</head>
<body class="bg-light">
    <div class="container mt-4">
        <a href="/dashboard" class="btn btn-secondary btn-sm mb-3">Kembali</a>
        <h3>ðŸŽ¯ Target Saya</h3>
        <% dataTarget.forEach(item => { 
            let persen = (item.terkumpul / item.goal) * 100;
        %>
        <div class="card p-3 mb-3 shadow-sm">
            <h6><%= item.nama %></h6>
            <div class="progress-bar-container mb-2">
                <div class="progress-fill" style="--pg-width: <%= Math.round(persen) %>%;">
                    <%= Math.round(persen) %>%
                </div>
            </div>
            <form action="/update-target/<%= item.id %>" method="POST" class="d-flex gap-2">
                <input type="number" name="tambah_saldo" class="form-control" required>
                <button class="btn btn-success">Tabung</button>
            </form>
        </div>
        <% }) %>
    </div>

    <footer class="text-center mt-5 p-4 text-muted">
        <hr>
        <p>@Copyright by 23552011403_Ai Nurul Hidayah_23 CNS A_UASWEB1</p>
    </footer>
</body>
</html>